<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8"/>
    <meta http-equiv="x-ua-compatible" content="ie=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Socializer</title>
    <link href="https://fonts.googleapis.com/css?family=Marck+Script" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css?family=Bitter" rel="stylesheet"/>
    <link rel="stylesheet" href="stylesheets/foundation-css/foundation.min.css" />
    <link rel="stylesheet" href="stylesheets/landing_page.css"/>
    <link rel="stylesheet" href="stylesheets/animate.css"/>
  </head>
  <body>
    <!-- SITE-HEADER -->
    <div class="site-header">
      <h3 class="site-logo"><%= siteLogo %></h3>
      <button class="hollow signin button" data-open="signinModal"><%= signinButtonText %></button>
    </div>
    <!-- END SITE-HEADER -->
    
    <!-- SITE-MAIN-CONTENT -->
    <div class="site-content">
      <!-- BACKGROUND IMAGE -->
      <div class="background-image">
        <h2 class="head-line"><%= headLine %></h2>
        <h4 class="sub-head-line"><%= subheadLine %></h4>
      </div>
      <!-- BACKGROUND IMAGE -->

      <!-- LOGIN MODAL -->
      <div class="reveal animated fadeInDown" style="border-radius: 3px;" id="signinModal" data-reveal>
        <form>
          <p class="modal window text"><%= signinButtonText %></p>
          <div class="row">
            <div class="large-12 columns">
              <input type="email" name="email" class="input field" placeholder="<%= emailFieldText %>" required>
            </div>
          </div>
          <div class="row">
            <div class="large-12 columns">
              <input type="password" name="password" class="input field" placeholder="<%= passwordFieldText %>" required>
            </div>
          </div>
          <input id="checkbox" type="checkbox"><label for="checkbox1"><%= rememberMe %></label>
          <a class="modal reset text"><%= resetPassword %></a>
          <button class="button primary sign in"><%= signinButtonText %></button>         
        </form>
        <button class="close-button" data-close aria-label="Close modal" type="button">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <!-- END LOGIN MODAL -->

      <!-- SECTION ONE BLOCK -->
      <div class="section-one">
        <p>
          <%= sectionOneText['part-1'] %> 
          <b class='blue-bolded-text'><%= sectionOneText['blue-bolded-text'] %></b> 
          <%= sectionOneText['part-2'] %> 
          <b><%= sectionOneText['bolded-text-1'] %>
          </b> <%= sectionOneText['part-3'] %> <b>
          <%= sectionOneText['bolded-text-2'] %></b>. 
          <%= sectionOneText['part-4'] %> <b>
          <%= sectionOneText['bolded-text-3'] %></b>. 
          <%= sectionOneText['part-5'] %>
        </p>
        <button class="create profile button primary" href=""><%= createProfileButtonText %></button>
      </div>
      <!-- END SECTION ON BLOCK -->

      <!-- SECTION TWO BLOCK -->
      <div class="section-two"></div>
      <!-- END SECTION TWO BLOCK -->
    </div>
    <!-- END MAIN-SITE-CONTENT -->

    <!-- SITE FOOTER -->
    <div class="site-footer">
      <p class="copyright"><%= siteFooterCopyright %></p>
    </div>
    <!-- END SITE FOOTER -->
    <script type="text/javascript" src="javascripts/foundation-js/jquery.js"></script>
    <script type="text/javascript" src="javascripts/foundation-js/foundation.min.js"></script>
    <script type="text/javascript" src="javascripts/foundation-js/what-input.js"></script>
    <script type="text/javascript" src="javascripts/foundation-js/run-foundation.js"></script>
  </body>
</html>
