<!DOCTYPE html>
<html lang="en">
    <head>
        <!-- META TAGS -->
        <meta charset="utf-8"/>
        <meta http-equiv="x-ua-compatible" content="ie=edge"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <!-- META TAGS -->

        <title>Socializer</title>

        <!-- FONTS -->
        <link href="https://fonts.googleapis.com/css?family=Marck+Script" rel="stylesheet"/>
        <link href="https://fonts.googleapis.com/css?family=Bitter" rel="stylesheet"/>
        <!-- END FONTS -->

        <!-- CSS FILES -->
        <link rel="stylesheet" href="stylesheets/foundation-css/foundation.min.css" />
        <link rel="stylesheet" href="stylesheets/landing-page.css"/>
        <link rel="stylesheet" href="stylesheets/animate.css"/>
        <!-- END CSS FILES -->
    </head>
    <body>
        <!-- SITE-HEADER -->
        <div class="site-header">
            <h3 class="site-logo"><%= pageText.siteLogo %></h3>
            <button class="hollow signin button" data-open="signinModal"><%= pageText.signinButtonText %></button>
        </div>
        <!-- END SITE-HEADER -->

        <!-- SITE-MAIN-CONTENT -->
        <div class="site-content">

            <!-- BACKGROUND IMAGE -->
            <div class="background-image">
                <h2 class="head-line"><%= pageText.headLine %></h2>
                <h4 class="sub-head-line"><%= pageText.subheadLine %></h4>
            </div>
            <!-- BACKGROUND IMAGE -->

            <!-- LOGIN MODAL -->
            <div class="reveal animated fadeInDown" style="border-radius: 3px;" id="signinModal" data-reveal>
                <form>
                    <p class="modal window text"><%= pageText.signinButtonText %></p>
                    <div class="row">
                        <div class="large-12 columns">
                            <input type="email" name="email" class="input field" placeholder="<%= pageText.emailFieldText %>" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="large-12 columns">
                            <input type="password" name="password" class="input field" placeholder="<%= pageText.passwordFieldText %>" required>
                        </div>
                    </div>
                    <input id="checkbox" type="checkbox"><label for="checkbox1"><%= pageText.rememberMe %></label>
                    <a class="modal reset text"><%= pageText.resetPassword %></a>
                    <button class="button primary sign in"><%= pageText.signinButtonText %></button>
                </form>
                <button class="close-button" data-close aria-label="Close modal" type="button">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <!-- END LOGIN MODAL -->

            <!-- SECTION ONE BLOCK -->
            <div class="section-one">
                <p>
                    <%= pageText.sectionOneText['part-1'] %>
                    <b class='blue-bolded-text'><%= pageText.sectionOneText['blue-bolded-text'] %></b>
                    <%= pageText.sectionOneText['part-2'] %>
                    <b><%= pageText.sectionOneText['bolded-text-1'] %>
                    </b> <%= pageText.sectionOneText['part-3'] %> <b>
                        <%= pageText.sectionOneText['bolded-text-2'] %></b>.
                    <%= pageText.sectionOneText['part-4'] %> <b>
                        <%= pageText.sectionOneText['bolded-text-3'] %></b>.
                    <%= pageText.sectionOneText['part-5'] %>
                </p>
                <button class="create profile button primary" href=""><%= pageText.createProfileButtonText %></button>
            </div>
            <!-- END SECTION ONE BLOCK -->

            <!-- SECTION TWO BLOCK -->
            <div class="section-two"></div>
            <!-- END SECTION TWO BLOCK -->

        </div>
        <!-- END MAIN-SITE-CONTENT -->

        <!-- SITE FOOTER -->
        <div class="site-footer">
            <p class="copyright"><%= pageText.siteFooterCopyright %></p>
        </div>
        <!-- END SITE FOOTER -->

        <!-- JAVASCRIPT FILES -->
        <script type="text/javascript" src="javascripts/foundation-js/jquery.js"></script>
        <script type="text/javascript" src="javascripts/foundation-js/foundation.min.js"></script>
        <script type="text/javascript" src="javascripts/foundation-js/what-input.js"></script>
        <script type="text/javascript" src="javascripts/foundation-js/run-foundation.js"></script>
        <!-- END JAVASCRIPT FILES -->
    </body>
</html>
